/* =================================================================
   Final QSS Stylesheet for Combine Trade Bot
   ================================================================= */

/* --- General Window and Font Styling --- */
#MainWindow, QWidget {
    background-color: #282a36; 
    color: #F0F0F0; 
    font-family: "Inter", "Segoe UI", "Cantarell", "Fira Sans", sans-serif;
}

/* --- Top Tab Bar Styling --- */
QTabWidget::pane {
    border: none;
}

QTabBar::base {
    background-color: #282a36;
}

QTabBar::tab {
    font-size: 11pt;
    font-weight: bold;
    color: #bd93f9; 
    background-color: transparent;
    padding: 10px 15px;
    margin-right: 2px;
    border: none;
    border-bottom: 3px solid transparent;
}

QTabBar::tab:hover {
    color: #f8f8f2;
}

QTabBar::tab:selected {
    color: #f8f8f2; 
    border-bottom: 3px solid #bd93f9; 
}

/* --- Card Styling --- */
QFrame#InfoCard {
    background-color: #44475a; 
    border-radius: 8px;
    padding: 15px;
}

QLabel#CardTitle {
    color: #bd93f9;
    font-size: 10pt;
    font-weight: bold;
    text-transform: uppercase;
}

QLabel#CardContent {
    color: #F0F0F0;
    font-size: 12pt;
    font-weight: normal;
    border: none;
    background-color: transparent;
}

QLabel, QCheckBox {
    font-size: 10pt;
}

/* --- Status Labels inside Cards --- */
QLabel#CardStatusConnected, QLabel#CardStatusDisconnected, QLabel#CardStatusError, QLabel#CardStatusOffline {
    font-size: 9pt;
    font-weight: bold;
    padding: 4px 10px;
    border-radius: 8px;
}

QLabel#CardStatusConnected {
    color: #50fa7b; 
    background-color: rgba(80, 250, 123, 0.15); 
}
QLabel#CardStatusDisconnected, QLabel#CardStatusOffline, QLabel#CardStatusError {
    color: #ff5555; 
    background-color: rgba(255, 85, 85, 0.15);
}

/* --- Button Styling --- */
QPushButton {
    font-size: 10pt;
    font-weight: bold;
    border-radius: 6px;
    padding: 10px 18px;
    border: 1px solid #bd93f9;
}

QPushButton#PrimaryButton {
    background-color: #bd93f9;
    color: #f8f8f2;
}

QPushButton#PrimaryButton:hover {
    background-color: #caa9fa;
}

QPushButton#SecondaryButton {
    background-color: transparent;
    color: #f8f8f2;
}

QPushButton#SecondaryButton:hover {
    background-color: #44475a;
}

/* --- Input Field Styling --- */
QLineEdit {
    background-color: #44475a;
    border: 1px solid #6272a4;
    padding: 5px;
    font-size: 10pt;
    color: #f8f8f2;
    border-radius: 4px;
}

QLineEdit:focus {
    border: 1px solid #bd93f9;
}

/* --- Table and Log Styling --- */
QTableWidget {
    gridline-color: #44475a;
    border: 1px solid #44475a;
    background-color: #282a36;
}
QHeaderView::section {
    background-color: #44475a;
    color: #bd93f9;
    padding: 4px;
    border: 1px solid #282a36;
    font-weight: bold;
}
QTextEdit#LogArea {
    border: 1px solid #44475a;
    background-color: #21222C;
}

/* --- ScrollBar Styling --- */
QScrollBar:vertical {
    border: none;
    background: #282a36;
    width: 10px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #44475a;
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* --- ИСПРАВЛЕНИЕ 2: Стили для переключателя без картинок --- */
QCheckBox#LiveSwitch {
    spacing: 10px; /* Расстояние между текстом и переключателем */
}

QCheckBox#LiveSwitch::indicator {
    width: 40px;
    height: 20px;
    border-radius: 10px;
    border: 1px solid #6272a4;
}

QCheckBox#LiveSwitch::indicator:unchecked {
    background-color: #6272a4; /* "Выключен" - серо-синий */
}

QCheckBox#LiveSwitch::indicator:checked {
    background-color: #50fa7b; /* "Включен" - зеленый */
    border: 1px solid #50fa7b;
}